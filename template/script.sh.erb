#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

# Clear any existing XDG_RUNTIME_DIR to avoid warnings from dconf
unset XDG_RUNTIME_DIR

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>

# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting Image Registration at: $(date)"

# Launch the Image Registration job
set -x
apptainer exec ${CONTAINER} echo "<%= reference_image %> <%= input_image %>"
